{
  "components": {
    "schemas": {
      "NimbusWifiStatus": {
        "type": "object",
        "properties": {
          "state": {
            "type": "string",
            "enum": [
              "connected",
              "not_connected",
              "unknown"
            ]
          },
          "details": {
            "type": "object",
            "properties": {
              "ssid": {
                "type": "string",
                "description": "Wireless network name"
              },
              "bssid": {
                "type": "string"
              },
              "downspeed": {
                "type": "number"
              },
              "upspeed": {
                "type": "number"
              },
              "signal": {
                "type": "number"
              },
              "ips": {
                "type": "array",
                "description": "IP addresses",
                "items": {
                  "type": "string"
                }
              },
              "frequency": {
                "type": "string",
                "enum": [
                  "2.4ghz",
                  "5ghz"
                ]
              }
            }
          },
          "metaData": {
            "type": "object"
          }
        }
      }
    }
  }
}
