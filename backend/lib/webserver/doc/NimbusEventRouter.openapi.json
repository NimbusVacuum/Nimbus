{
  "/api/v2/events": {
    "get": {
      "tags": [
        "NimbusEvents"
      ],
      "summary": "Get all NimbusEvents that are currently stored",
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "/api/v2/events/{id}": {
    "get": {
      "tags": [
        "NimbusEvents"
      ],
      "summary": "Get NimbusEvent by ID",
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "description": "NimbusEvent ID",
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "404": {
          "$ref": "#/components/responses/400"
        }
      }
    }
  },
  "/api/v2/events/{id}/interact": {
    "put": {
      "tags": [
        "NimbusEvents"
      ],
      "summary": "Interact with a NimbusEvent",
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "description": "NimbusEvent ID",
          "schema": {
            "type": "string"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "interaction": {
                  "type": "string",
                  "enum": [
                    "ok",
                    "yes",
                    "no",
                    "reset"
                  ]
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "500": {
          "$ref": "#/components/responses/500"
        },
        "404": {
          "$ref": "#/components/responses/404"
        }
      }
    }
  }
}
